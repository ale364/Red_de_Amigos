<div class="col-md-6 col-md-offset-3">
  <div class="edit-review-form">

    <h1>Editar Comentario</h1>

    <%= simple_form_for([@sitio, @review]) do |f| %>
      <div id="rating-form">
        <label>Calificar</label>
      </div>
      <%= f.input :comment %>
      <%= f.button :submit, class: "btn-custom2" %>
    <% end %>
  </div>
</div>

<script>
  $('#rating-form').raty({
    path: '/assets',
    scoreName: 'review[rating]'
  });
</script>
